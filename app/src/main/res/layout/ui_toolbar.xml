<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

	<android.support.v7.widget.Toolbar
		android:id="@+id/uiToolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"
		android:background="?attr/colorPrimary"
		app:layout_scrollFlags="enterAlways"
		app:popupTheme="@style/ThemeOverlay.AppCompat"
		android:contentInsetLeft="@dimen/ui_toolbar_contentInsetLeft"
		android:contentInsetStart="@dimen/ui_toolbar_contentInsetLeft"
		android:contentInsetRight="@dimen/ui_toolbar_contentInsetRight"
		android:contentInsetEnd="@dimen/ui_toolbar_contentInsetRight"
		app:contentInsetLeft="@dimen/ui_toolbar_contentInsetLeft"
		app:contentInsetStart="@dimen/ui_toolbar_contentInsetLeft"
		app:contentInsetRight="@dimen/ui_toolbar_contentInsetRight"
		app:contentInsetEnd="@dimen/ui_toolbar_contentInsetRight">

	</android.support.v7.widget.Toolbar>

	<View
		android:background="?android:attr/dividerVertical"
		android:layout_width="match_parent"
		android:layout_height="@dimen/ui_dividerHeight"/>

</android.support.design.widget.AppBarLayout>
