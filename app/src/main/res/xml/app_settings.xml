<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- UI -->
	<ru.devreader.app.ui.preference.CategoryPreference
		android:title="@string/pref_ui_category"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="ui.fabAlpha"
		android:title="@string/pref_ui_fab_alpha"
		android:defaultValue="false"/>
	
	<ru.devreader.app.ui.preference.PromtPreference
		android:title="@string/promt_tip"
		android:summary="@string/pref_ui_fab_alpha_promt"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="ui.fabScroll"
		android:title="@string/pref_ui_fab_scroll"
		android:summary="@string/pref_ui_fab_scroll_summary"
		android:defaultValue="false"
		android:enabled="false"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="ui.pageTitle"
		android:title="@string/pref_ui_page_title"
		android:summary="@string/pref_ui_page_title_summary"
		android:defaultValue="false"
		android:enabled="false"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="ui.rotateAuto"
		android:title="@string/pref_ui_rotate_auto"
		android:defaultValue="false"
		android:enabled="false"/>
	
	<!-- More -->
	<ru.devreader.app.ui.preference.CategoryPreference
		android:title="@string/pref_more_category"/>

	<Preference
		android:icon="@android:color/transparent"
		android:key="more.installInA2IGA"
		android:title="@string/pref_more_a2iga"/>

	<ru.devreader.app.ui.preference.PromtPreference
		android:title="@string/promt_tip"
		android:summary="@string/pref_more_a2iga_promt"/>
	
	<!-- OTA -->
	<ru.devreader.app.ui.preference.CategoryPreference
		android:title="@string/pref_ota_category"/>

	<Preference
		android:icon="@android:color/transparent"
		android:key="ota.check"
		android:title="@string/pref_ota_check"
		android:summary="@string/pref_ota_check_summary"/>
	
	<ru.devreader.app.ui.preference.PromtPreference
		android:title="@string/promt_tip"
		android:summary="@string/pref_ota_promt"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="ota.checkAuto"
		android:title="@string/pref_ota_check_auto"
		android:summary="@string/pref_ota_check_auto_summary"
		android:defaultValue="true"/>
	
	<!-- Debug -->
	<ru.devreader.app.ui.preference.BorderPreference />
	<ru.devreader.app.ui.preference.CategoryPreference
		android:title="Отладка (Debug)"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="dbg.js"
		android:title="JavaScript"
		android:defaultValue="true"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="dbg.webViewCashe"
		android:title="Кеширование страниц в WebView"
		android:defaultValue="true"/>

	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="dbg.injectJs"
		android:title="Inject JS"
		android:defaultValue="true"/>
	
	<Preference
		android:icon="@android:color/transparent"
		android:key="dbg.firstStartPrefReset"
		android:title="Сброс первого запуска"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="dbg.shouldOverrideUrlLoadingV2"
		android:title="Should override url loading (v2)"
		android:defaultValue="false"/>
	
	<SwitchPreference
		android:icon="@android:color/transparent"
		android:key="dbg.showLoadUrl"
		android:title="Show load url"
		android:defaultValue="false"/>
	
	<ru.devreader.app.ui.preference.PromtPreference 
		android:summary="Настройки для разработчика!"/>
	
</PreferenceScreen>
